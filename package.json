{
  "name": "@davidrouyer/gatsby-source-google-spreadsheets",
  "version": "0.0.2",
  "description": "A source plugin for Gatsby that allows reading data from Google Sheets.",
  "main": "index.js",
  "scripts": {
    "build": "tsc --build tsconfig.json",
    "prepack": "yarn format && yarn test && cross-env NODE_ENV=production yarn build",
    "format": "prettier ./src/** --write",
    "test": "jest"
  },
  "author": "David Rouyer <rouyer.david@gmail.com>",
  "keywords": [
    "gatsby",
    "gatsby-plugin",
    "gatsby-source-plugin"
  ],
  "license": "MIT",
  "jest": {
    "setupFiles": [
      "dotenv/config"
    ],
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src"
    ],
    "testMatch": [
      "**/__tests__/**/*.+(ts|tsx|js)",
      "**/?(*.)+(spec|test).+(ts|tsx|js)"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    }
  },
  "dependencies": {
    "gatsby-source-filesystem": "^2.5.0",
    "google-spreadsheet": "^3.0.13",
    "uuid": "^8.3.1"
  },
  "devDependencies": {
    "@types/google-spreadsheet": "^3.0.2",
    "@types/jest": "^25.2.1",
    "@types/node": "^14.14.7",
    "@types/uuid": "^7.0.3",
    "cross-env": "^7.0.2",
    "destiny": "^0.6.1",
    "dotenv": "^8.2.0",
    "jest": "^26.6.3",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.3",
    "typescript": "^4.0.5"
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "all",
    "proseWrap": "always",
    "tabWidth": 2,
    "arrowParens": "avoid"
  }
}
